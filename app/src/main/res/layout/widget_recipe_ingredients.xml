<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_recipe_ingredients_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <ListView
        android:id="@+id/widget_recipe_ingridients_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/widget_recipe_ingridients_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Please make a recipe as Fav to view the Ingredients List" />
</LinearLayout>